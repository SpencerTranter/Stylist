<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>

     <!-- styling -->
      <link href="https://fonts.googleapis.com/css?family=Monda" rel="stylesheet">
      <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

      <!-- javascript -->
      <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
      <script type="text/javascript" src="/vendor/bootstrap.js"></script>
      <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <div class="container-fluid">
      <header>
        <h1 class="text-center">sty<span id="list_title">list</span></h1>
      </header>

          <!-- inline form to create an account -->
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4">
          <form action="/login" method="post" class="login">
            <div class="form-group">
              <label for="email-input">Email</label>
              <input type="text" class="form-control email" name="username" id="username" placeholder="stylist@stylist.com">
            </div>
            <div class="form-group">
              <label for="password-input">Password</label>
              <input type="password" class="form-control" name="password" id="password">
            </div>

          </div>
          <div class="col-md-4"></div>
        </div>

        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-1">
            <button type="submit" class="btn btn-default inactive">Login</button>
          </div>
          <div class="col-md-1">
            <a class="btn btn-default inactive create_acct" href="/user/new" role="button">Create account</a>
          </div>
          </form>
          <div class="col-md-4"></div>
        </div>
    </div>
  </body>
</html>


